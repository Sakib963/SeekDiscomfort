<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeekersEssential">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
       android:id="@+id/floating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="50px"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/proceed_button"
        app:layout_constraintEnd_toEndOf="@+id/proceed_button"
        android:src="@drawable/carticon"/>

    <Button
        android:id="@+id/proceed_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Proceed"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttons"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
    </Button>

    <ScrollView
        android:id="@+id/scrollview_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_one_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/seek1"
                android:clickable="true"/>

            <TextView
                android:id="@+id/product_one_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Seeker LS Tee"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/product_one_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: 800 Taka"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/product_one_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our Long SLeeve Tee is sustainably
made from 100% organic cotton giving it a super soft fel with a slightly
wider and shorter fit than our Essential Tee to achieve a boxier look."
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <RelativeLayout
                android:id="@+id/product_one_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/minus_prod_one"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttons"
                    android:text="-"
                    android:textSize="22sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/prod_one_quantity_text"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/minus_prod_one"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:background="@drawable/input_design"/>

                <Button
                    android:id="@+id/prod_one_cart_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/buttons"
                    android:text="Add to Cart"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/plus_prod_one"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/prod_one_quantity_text"
                    android:text="+"
                    android:textSize="20sp"
                    android:background="@drawable/buttons"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/product_two_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/seek3"
                android:clickable="true"/>

            <TextView
                android:id="@+id/product_two_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Seeker Fashion Tee"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/product_two_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: 500 Taka"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/product_two_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* Unisex\n* Mid Weight\n* Seek Discomfort
screen printed logo on the front.\n* Embroidered three bolts on the back"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <RelativeLayout
                android:id="@+id/product_two_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/minus_prod_two"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttons"
                    android:text="-"
                    android:textSize="22sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/prod_two_quantity_text"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/minus_prod_two"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:background="@drawable/input_design"/>

                <Button
                    android:id="@+id/prod_two_cart_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/buttons"
                    android:text="Add to Cart"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/plus_prod_two"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/prod_two_quantity_text"
                    android:text="+"
                    android:textSize="20sp"
                    android:background="@drawable/buttons"/>
            </RelativeLayout>


            <ImageView
                android:id="@+id/product_three_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/seek5"
                android:clickable="true"/>

            <TextView
                android:id="@+id/product_three_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Black Align High Rise Pant"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/product_three_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: 400 Taka"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/product_three_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A Seek Discomfort // lululemon Exclusive.
We created this co-branded partnership to help you push
past your comfort zone in every way in order to grow
and improve. We challenge you to run a little faster,
lift a little heavier, or try a new exercise
altogetherâ€¦ then celebrate your hard work."
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <RelativeLayout
                android:id="@+id/product_three_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
