                <Button
                    android:id="@+id/plus_prod_three"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/prod_three_quantity_text"
                    android:text="+"
                    android:textSize="20sp"
                    android:background="@drawable/buttons"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/product_four_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/seek7"
                android:clickable="true"/>

            <TextView
                android:id="@+id/product_four_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Seeker Sweatpants"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/product_four_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: 600 Taka"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/product_four_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* Unisex\n* Slightly relaxewd fit through the legs
\n* Elastic waistband and ankle cuffs.\n* 2 side pockets and
single pocket at back.\n* Tonal External drawcord.\n
* Sustainably made."
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <RelativeLayout
                android:id="@+id/product_four_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/minus_prod_four"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttons"
                    android:text="-"
                    android:textSize="22sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/prod_four_quantity_text"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/minus_prod_four"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:background="@drawable/input_design"/>

                <Button
                    android:id="@+id/prod_four_cart_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/buttons"
                    android:text="Add to Cart"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/plus_prod_four"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/prod_four_quantity_text"
                    android:text="+"
                    android:textSize="20sp"
                    android:background="@drawable/buttons"/>
            </RelativeLayout>


            <ImageView
                android:id="@+id/product_five_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/seek13"
                android:clickable="true"/>

            <TextView
                android:id="@+id/product_five_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Seeker SweatShirt"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/product_five_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: 900 Taka"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/product_five_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* Seek Discomfort logo screen printed on front.\n
* Unisex\n* Mid-Weight\n
* Standard fit with subtle drop shoulder detail."
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <RelativeLayout
                android:id="@+id/product_five_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/minus_prod_five"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttons"
                    android:text="-"
                    android:textSize="22sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/prod_five_quantity_text"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/minus_prod_five"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:background="@drawable/input_design"/>

                <Button
                    android:id="@+id/prod_five_cart_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/buttons"
                    android:text="Add to Cart"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/plus_prod_five"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/prod_five_quantity_text"
                    android:text="+"
                    android:textSize="20sp"
                    android:background="@drawable/buttons"/>
            </RelativeLayout>


            <ImageView
                android:layout_width="150dp"
                android:layout_height="80dp"></ImageView>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>