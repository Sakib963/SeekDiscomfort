                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:background="@drawable/input_design"/>

                <Button
                    android:id="@+id/prod_two_cart_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/buttons"
                    android:text="Add to Cart"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/plus_prod_two"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/prod_two_quantity_text"
                    android:text="+"
                    android:textSize="20sp"
                    android:background="@drawable/buttons"/>
            </RelativeLayout>


            <ImageView
                android:id="@+id/product_image_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/seek6"
                android:clickable="true"/>

            <TextView
                android:id="@+id/product_name_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Extra Necklace Chain"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/product_price_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: 700 Taka"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/product_three_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A limited-edition jewelry piece from Seek Discomfort, with a daily reminder to always choose discomfort. Wear this chain by itself, or use it to replace the chain from a Pendant Necklace."
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <RelativeLayout
