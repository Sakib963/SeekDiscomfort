            <ImageView
                android:id="@+id/product_image_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/seek9"
                android:clickable="true"/>

            <TextView
                android:id="@+id/product_name_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Love Over Fear Ring"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/product_price_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: 1000 Taka"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/product_four_description"
                android:layout_width="match_parent"
