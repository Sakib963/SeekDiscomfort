<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductActivity">

    <ImageView
        android:id="@+id/logo_pic"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/logo"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_pic"
        android:textSize="22sp"
        android:textAlignment="center"
        android:id="@+id/product_name_txt"></TextView>

    <ImageView
        android:id="@+id/product_img"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/product_name_txt"></ImageView>

    <TextView
        android:id="@+id/product_price_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_img"
        android:textSize="22sp"
        android:textStyle="bold"
        ></TextView>


    <TextView
        android:id="@+id/description_of_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_price_text"
        android:textSize="18sp"></TextView>

</RelativeLayout>