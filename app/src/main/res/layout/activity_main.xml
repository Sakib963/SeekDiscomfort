<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/home">

        <Button
            android:id="@+id/logoutbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/buttons"
            android:layout_alignParentBottom="true"
            ></Button>

    <TextView
        android:id="@+id/seeking_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/input_design"
        android:padding="8dp"
        android:text="Seek Discomfort"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"></TextView>


    <LinearLayout
        android:layout_below="@id/seeking_text"
        android:id="@+id/linear_layout_one"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:weightSum="4"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >

        <Button
            android:id="@+id/seekerEssential"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="18sp"
            android:layout_marginRight="5dp"
            android:background="@drawable/seekers_essential">
        </Button>

        <Button
            android:id="@+id/jewelry_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:background="@drawable/jewelry">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_two"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/linear_layout_one"
        android:weightSum="4"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/search_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginRight="5dp"
            android:background="@drawable/search">
        </Button>

        <Button
            android:id="@+id/promo_code_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:background="@drawable/promo_code">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_three"
        android:layout_below="@+id/linear_layout_two"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:weightSum="4"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >

        <Button
            android:id="@+id/order_page_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/orders">
        </Button>

        <Button
            android:id="@+id/contact_us_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/contact">
        </Button>
    </LinearLayout>


</RelativeLayout>